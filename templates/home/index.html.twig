{% extends app.user ? 'menu/connecte.html.twig' :'menu/visiteur.html.twig' %}


{% block title %}Hello HomeController!{% endblock %}

{% block body %}

        <main class="columns">
                <aside class="column is-one-quarter">
                        <form method="POST">
                                <div>
                                        <div class="field">
                                                <div class="control has-icons-left">
                                                        <div class="select is-rounded">
                                                                <select name="categorie">
                                                                        <option value="">Toutes les catégories</option>
                                                                        {% for cat in categories %}
                                                                                <option value='{{ cat.id }}'>  {{ cat.titre }} </option>
                                                                        {% endfor %}
                                                                </select>
                                                        </div>
                                                        <div class="icon is-small is-left">
                                                                <i class="fas fa-democrat"></i>
                                                        </div>
                                                </div>
                                        </div>
                                        <div>
                                                <div class="field">
                                                        <div class="control has-icons-left">
                                                                <div class="select is-rounded">
                                                                        <select name="region">
                                                                                <option value="">Toutes les régions</option>
                                                                                {% for region in regions %}
                                                                                        <option value='{{ region.ville }}'>  {{ region.ville }} </option>
                                                                                {% endfor %}
                                                                        </select>
                                                                </div>
                                                                <div class="icon is-small is-left">
                                                                        <i class="fas fa-globe-europe"></i>
                                                                </div>
                                                        </div>
                                                </div>
                                        </div>

                                        <div class="field">
                                                <div class="control has-icons-left">
                                                        <div class="select is-rounded">
                                                                <select name="membre">
                                                                        <option value="">Tous les membres</option>
                                                                        {% for m in membres %}
                                                                                <option value='{{ m.id }}'>  {{ m.pseudo }} </option>
                                                                        {% endfor %}
                                                                </select>
                                                        </div>
                                                        <div class="icon is-small is-left">
                                                                <i class="fas fa-user"></i>
                                                        </div>
                                                </div>
                                        </div>

                                        <div>
                                                <label>Prix</label>
                                                <input class="slider is-fullwidth is-large" step="1" min="0" max="100000000" value="50" type="range">
                                        </div>

                                        <button class="button is-rounded button_org">Filtrer</button>
                                </div>
                        </form>
                </aside>

                <section class="column">
                        {% for ann in annonces %}
                                <p>{{ ann.titre }}</p>
                        {% endfor %}
                </section>
        </main>
{% endblock %}
